{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "workspace.rootPatterns": ["go.work", ".git/", ".hg/", ".projections.json"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      },
     "workspace.workspaceFolderCheckCwd": true
    }
  },
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "onTypeFormatting",
          "selectionRanges"
        ]
      },
      "filetypes": ["ruby"]
    }
  },
  "languageserver": {
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"]
    }
  },
  "go.goplsOptions":{
    "completeUnimported": true 
  },
  "coc.preferences.colorSupport": true,
  "codeLens.enable": true,
  "solargraph.useBundler": false,
  "solargraph.commandPath": "solargraph",
  "solargraph.formatting": true,
  "solargraph.diagnostics": false,
  "solargraph.checkGemVersion": true
}


// vim: filetype=jsonc
